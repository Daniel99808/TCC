generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  PROFESSOR
  ESTUDANTE
}

model User {
  id                Int        @id @default(autoincrement())
  nome              String
  cpf               String     @unique
  password          String
  role              Role       @default(ESTUDANTE)
  hasAAPM           Boolean    @default(false) // Acesso ao benefício AAPM
  turma             String?    // Turma do aluno (A, B, C, etc)
  createdAt         DateTime   @default(now())
  cursoId           Int?
  conversasUsuario1 Conversa[] @relation("ConversasUsuario1")
  conversasUsuario2 Conversa[] @relation("ConversasUsuario2")
  mensagensEnviadas Mensagem[]
  curso             Curso?     @relation(fields: [cursoId], references: [id])
  
}

model Curso {
  id        Int        @id @default(autoincrement())
  nome      String     @unique
  alunos    User[]
  murais    Mural[]
  calendarios Calendario[]
}

model Mural {
  id            Int      @id @default(autoincrement())
  conteudo      String
  tipoPublico   String   @default("TODOS") // TODOS, CURSO, TURMA
  cursoId       Int?     // ID do curso específico (se tipoPublico = CURSO ou TURMA)
  turma         String?  // Turma específica: A, B, C, etc (se tipoPublico = TURMA)
  createdAt     DateTime @default(now())
  curso         Curso?   @relation(fields: [cursoId], references: [id])
}

model Calendario {
  id          Int      @id @default(autoincrement())
  titulo      String
  descricao   String
  data        DateTime
  tipoPublico String   @default("TODOS") // TODOS, CURSO, TURMA
  cursoId     Int?     // ID do curso específico (se tipoPublico = CURSO ou TURMA)
  turma       String?  // Turma específica: A, B, C, etc (se tipoPublico = TURMA)
  curso       Curso?   @relation(fields: [cursoId], references: [id])
}

model Conversa {
  id         Int        @id @default(autoincrement())
  usuario1Id Int
  usuario2Id Int
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  usuario1   User       @relation("ConversasUsuario1", fields: [usuario1Id], references: [id])
  usuario2   User       @relation("ConversasUsuario2", fields: [usuario2Id], references: [id])
  mensagens  Mensagem[]

  @@unique([usuario1Id, usuario2Id])
}

model Mensagem {
  id          Int      @id @default(autoincrement())
  conteudo    String
  createdAt   DateTime @default(now())
  lida        Boolean  @default(false)
  remetenteId Int
  conversaId  Int
  conversa    Conversa @relation(fields: [conversaId], references: [id])
  remetente   User     @relation(fields: [remetenteId], references: [id])
}
