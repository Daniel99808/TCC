generator client {
  provider = "prisma-client-js"
  // Adicione a linha abaixo para forçar o output para o local padrão
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model User {
  id        Int       @id @default(autoincrement())
  nome      String    @unique
  cpf       String    @unique
  password  String
  createdAt DateTime  @default(now())
  cursoId   Int?
  curso     Curso?    @relation(fields: [cursoId], references: [id])
}

model Curso {
  id    Int    @id @default(autoincrement())
  nome  String @unique
  alunos  User[]
}


model Mural {
  id        Int      @id @default(autoincrement())
  conteudo  String
  createdAt DateTime @default(now())
}


model Calendario {
  id        Int      @id @default(autoincrement())
  titulo    String  
  descricao String
  inicio    DateTime
}